var mongoose = require('mongoose');
 
var Schema = mongoose.Schema
    ,ObjectId = Schema.ObjectId;
   
// create Widget model

var Widget = new Schema({
  sn : {type: Number, required: true, trim: true, unique: true}, 
  name : {type: String, required: true, trim: true},
  desc : String,
  price : Number
});

var sn_ptr = 1;

Widget.statics.nextsn = function() {
   return sn_ptr++;
};

Widget.statics.setsn = function(sn) {
    sn_ptr = sn;
};
 
module.exports = mongoose.model('Widget', Widget);
