extends layout

append stylesheets
  link(rel='stylesheet', href='/stylesheets/gallery.css')

block scripts
  script(type='text/javascript', 
    src='//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js')

block content
  table
    caption Gallery
      tr
        th Id
        th Name
        th Size (pixels)
        th Preview
        th(colspan='2') Action
      if gallery.length
        each canvas in gallery
          if canvas
            include row
      tr
        td(colspan='6')
          a(href='/new') New
  script(type='text/javascript', src='../javascripts/gallery.js')